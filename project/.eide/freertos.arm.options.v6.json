{
    "version": 3,
    "beforeBuildTasks": [],
    "afterBuildTasks": [
        {
            "name": "Slash conversion",
            "disable": false,
            "abortAfterFailed": false,
            "command": "powershell -Command \"(gc -encoding utf8 ${OutDir}/compile_commands.json) -replace '\\\\\\\\', '/' -replace 'c:', 'C:' | Out-File -encoding utf8 ${OutDir}/compile_commands.json\""
        }
    ],
    "global": {
        "use-microLIB": true,
        "output-debug-info": "enable"
    },
    "c/cpp-compiler": {
        "optimization": "level-0",
        "language-c": "gnu11",
        "language-cpp": "c++11",
        "warnings": "ac5-like-warnings",
        "one-elf-section-per-function": true
    },
    "asm-compiler": {
        "$use": "asm-auto"
    },
    "linker": {
        "output-format": "elf",
        "misc-controls": "--diag_suppress=L6329"
    }
}